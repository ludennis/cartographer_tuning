<?xml version="1.0"?>
<robot name="itri_van">

  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>
  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>
  <material name="ghost">
    <color rgba="1 1 1 0.3"/>
  </material>
  <material name="blue">
    <color rgba="0 0 1 1"/>
  </material>

  <link name="base_link">
    <visual>
      <geometry>
        <box size="4 1.52 1.96"/>
      </geometry>
      <material name="ghost"/>
    </visual>
  </link>

  <link name="base_imu">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <link name="tracking_imu">
  </link>

  <joint name="car_to_imu_mount" type="fixed">
    <parent link="base_link"/>
    <child link="tracking_imu"/>
    <origin rpy="-0.002786329236374046 0.03665189849702838 0.11018394544830967" xyz="0.05 0 -0.25"/>
  </joint>

  <joint name="imu_mount_to_imu" type="fixed">
    <parent link="tracking_imu"/>
    <child link="base_imu"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <link name="velodyne">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="car_to_lidar" type="fixed">
    <parent link="base_link"/>
    <child link="velodyne"/>
    <origin rpy="0.005 0.14 0.0" xyz="1.2 0.0 1.0"/>
  </joint>

  <link name="gps">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="car_to_gps" type="fixed">
    <parent link="base_link"/>
    <child link="gps"/>
    <origin xyz="-0.12 0.27 0.96"/>
  </joint>
</robot>
